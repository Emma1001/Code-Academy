b)
#include <stdio.h>
int main(){
    
    printf("          #  \n");
    printf("        # # # \n");
    printf("      # # # # # \n"); 
    printf("    # # # # # # # \n");
    printf("  # # # # # # # # # \n");
    printf("# # # # # # # # # # #\n");

    return 0;
}

